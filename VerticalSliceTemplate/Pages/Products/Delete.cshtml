@page "{id=Form.Id}"
@model VerticalSliceTemplate.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<form method="post">
    <input asp-for="Form.Id" hidden />
    <h2 class="text-primary">Delete Product</h2>
    <p>Are you sure you want to delete product <q><strong>@Model.Product.Name</strong></q>?</p>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="Index" class="btn btn-secondary border form-control">
                Back to List
            </a>
        </div>
    </div>
</form>