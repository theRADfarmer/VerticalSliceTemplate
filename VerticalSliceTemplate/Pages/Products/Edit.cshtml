@page
@model VerticalSliceTemplate.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<form method="post">

    <input asp-for="Form.Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Form.Name" class="p-0"></label>
            <input asp-for="Form.Name" class="form-control" />
            <span asp-validation-for="Form.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Form.Price" class="p-0"></label>
            <input asp-for="Form.Price" class="form-control" />
            <span asp-validation-for="Form.Price" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Save</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Products/Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
