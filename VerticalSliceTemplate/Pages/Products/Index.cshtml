@page
@model VerticalSliceTemplate.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Products
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="./Create" class="btn btn-primary">Create New Product</a>
        </div>
    </div>

    <table class="table table-bordred table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

